{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsPolicy": {
    "Name": "ApiCorsPolicy"
  },
  "SwaggerGen": {
    "Name": "v1",
    "OpenApiInfo": {
      "Title": "TaskManagement.Api",
      "Version": "v1",
      "Description": "Task Management Api Documentation"
    },
    "OpenApiSecurityScheme": {
      "Name": "Authorization",
      "Scheme": "Bearer",
      "BearerFormat": "JWT",
      "Description": "JWT utilisation in the Authorization header, using Bearer schema"
    }
  },
  "SwaggerEndpoint": {
    "Url": "/swagger/v1/swagger.json",
    "Name": "Api Task Management v1"
  },
  "ConnectionStrings": {
    "TaskManagementDbName": "TaskManagement.db",
    "TaskManagementDb": "Data Source=TaskManagement.db"
  },
  "Jwt": {
    "Key": "-----THIS IS THE KEY USED TO AUTHENTICATE AND VALIDATE JWT TOKENS, PUT LIKE THIS FOR DEMONSTRATION PURPOSES ONLY-----",
    "Issuer": "TaskManagementApp",
    "SecondsToExpire": 120
  }
}
